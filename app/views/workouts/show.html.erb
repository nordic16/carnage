<div class="md:container px-auto px-4">
  <p class="text-slate-100 text-4xl font-extrabold"><%= @workout.title %></p>
  <div class="flex justify-center gap-8 mt-3">
    <div class="bg-slate-100 p-3 text-gray-700 rounded-xl">
      <p class="font-bold text-2xl">Exercises</p> 
      <% @exercises.each do |exercise| %>
        <p class="ml-2"><%= exercise.name %> ([] sets)</p>
      <% end %>
    </div>
    <div class="bg-red-400 p-3 text-slate-100 rounded-xl">
      <p class="font-bold text-2xl">Stats</p>
      <div class="ml-2">
        <p>Exercises performed: <b><%= @exercises.count %></b></p>
        <p>Sets performed: <b>[]</b></p>
        <p>Average intensity: <b>[]</b></p> <!--Per set intensity-->
        <p>Total intensity: <b>[]</b></p> <!--Total intensity. Asked after the user finishes the workout-->
        <p>Session duration: <b><%= @workout.duration %> min</b></p>
      </div>
    </div>
  </div>
</div>
